<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin Free Bootstrap-4 Admin Dashboard Template</title>
    <% include _style%>
</head>

<body>
    <div class="container-scroller">
        <% include _navbar%>
        <div class="container-fluid page-body-wrapper">
            <% include _sidebar%>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Quản lý học phí</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Tài khoản</th>
                                                <th>Khoá học</th>
                                                <th>Học phí</th>
                                                <th>Còn nợ</th>
                                                <th>Tình trạng</th>
                                                <th>Chi tiết</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% hocphi.forEach(function(item){%>
                                            <tr>
                                                <td><%=item.TK_USERNAME %></td>
                                                <td><%=item.KH_TEN %></td>
                                                <td><%=item.KH_HOCPHI %></td>
                                                <td><%=item.HP_CONNO  %></td>
                                                <%if(item.HP_TINHTRANG==0){%>
                                                <td>Chưa đóng</td>
                                                <%} else {%>
                                                <td>Đã đóng</td>
                                                <%}%>
                                                <td>
                                                    <a class="btn btn-icons btn-rounded btn-primary" data-toggle="modal"
                                                        data-target="#suahocphi<%=item.HP_ID%>"><i
                                                    class="fa fa-pencil"></i></a>
                                                </td>
                                                <div class="modal fade" id="suahocphi<%=item.HP_ID%>" role="dialog">
                                                    <div class="modal-dialog">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-body">
                                                                <div class="card">
                                                                    <div class="card-body">
                                                                        <h4 class="card-title">Sửa học phí </h4>
                                                                        <form
                                                                            action="/quanly/hocphi/sua-<%=item.HP_ID%>"
                                                                            class="forms-sample" method="POST">
                                                                            <div class="form-group">
                                                                                <label for="conno">Còn nợ</label>
                                                                                <input type="number"
                                                                                    class="form-control" id="conno"
                                                                                    name="conno"
                                                                                    value="<%=item.HP_CONNO %>">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="sotien">Số tiền</label>
                                                                                <input type="number"
                                                                                    class="form-control" id="sotien"
                                                                                    readonly name="sotien"
                                                                                    value="<%=item.HP_SOTIEN  %>">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="hocphi">Học phí</label>
                                                                                <select class="form-control" id="hocphi"
                                                                                    name="hocphi">
                                                                                    <option value="0">Chưa đóng</option>
                                                                                    <option value="1">Đã đóng</option>
                                                                                </select>
                                                                            </div>
                                                                            <button type="submit"
                                                                                class="btn btn-success mr-2">Cập
                                                                                nhật</button>
                                                                            <button type="reset"
                                                                                class="btn btn-light">Xoá</button>
                                                                        </form>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default"
                                                                    data-dismiss="modal">Đóng</button>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                            </tr>
                                            <%})%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <% include _footer%>
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <% include _javascript%>
    <!-- Custom js for this page-->
    <!-- End custom js for this page-->
</body>

</html>