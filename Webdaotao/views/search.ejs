<!DOCTYPE html>
<html lang="en">

<head>
	<title>WebUni - Education Template</title>
	<meta charset="UTF-8">
	<meta name="description" content="WebUni Education Template">
	<meta name="keywords" content="webuni, education, creative, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<% include _styles%>

</head>

<body>
	<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Header section -->
	<% include _header %>
	<!-- Header section end -->


	<!-- Page info -->
	<% include _pageinfo%>
	<!-- Page info end -->



	<!-- search section -->
	<% include _search %>
	<!-- search section end -->

	<!-- course section -->
	<section class="course-section spad pb-0">
		<div class="course-warp">
			<div class="row course-items-area">
				<!-- course -->
				<% khoahoc.forEach(function(item){%>
				<div class="mix col-lg-3 col-md-4 col-sm-6 MH<%=item.MH_ID%>">
					<div class="course-item">
						<div class="course-thumb set-bg" data-setbg="img/courses/<%=item.MH_ID%>.jpg">
							<div class="price"><a href="/khoahoc-<%=item.KH_ID %>">Giá: <%=item.KH_HOCPHI %></a></div>
						</div>
						<div class="course-info">
							<div class="course-text">
								<h5><%=item.MH_TEN %></h5>
								<p><%=item.MH_NOIDUNG%></p>
								<div class="students"><%=item.LP_SISO %> Học sinh</div>
							</div>
							<div class="course-author">
								<div class="ca-pic set-bg" data-setbg="img/authors/1.jpg"></div>
								<p><span>Giáo viên</span>:<%=item.KH_GIAOVIEN %></p>
							</div>
						</div>
					</div>
				</div>
				<%})%>
			</div>
		</div>
	</section>
	<!-- course section end -->


	<!-- banner section -->
	<% include _banner%>
	<!-- banner section end -->


	<!-- footer section -->
	<% include _footer%>
	<!-- footer section end -->


	<!--====== Javascripts & Jquery ======-->
	<% include _javascripts.ejs%>
</body>

</html>