<!-- course section -->
<section class="course-section spad">
	<div class="container">
		<div class="section-title mb-0">
			<h2>Gợi ý khoá học và giáo viên xuất sắc</h2>
			<p>Đây là danh sách các khoá học với những giáo viên được đánh giá cao của chúng tôi</p>
		</div>
	</div>
	<div class="course-warp">
		<ul class="course-filter controls">
			<li class="control active" data-filter="all">Tất cả</li>
			<% monhoc.forEach(function(item){%>
			<li class="control" data-filter=".MH<%=item.MH_ID%>"><%=item.MH_TEN %></li>
			<%})%>
		</ul>
		<div class="row course-items-area">
			<!-- course -->
			<% khoahoc.forEach(function(item){%>
			<div class="mix col-lg-3 col-md-4 col-sm-6 MH<%=item.MH_ID%>">
				<div class="course-item">
					<div class="course-thumb set-bg" data-setbg="img/courses/<%=item.MH_ID%>.jpg">
						<div class="price"><a href="/khoahoc-<%=item.KH_ID %>">Giá: <%=item.KH_HOCPHI %></a></div>
					</div>
					<div class="course-info">
						<div class="course-text">
							<h5><%=item.MH_TEN %></h5>
							<p><%=item.MH_NOIDUNG%></p>
							<div class="students"><%=item.LP_SISO %> Học sinh</div>
						</div>
						<div class="course-author">
							<div class="ca-pic set-bg" data-setbg="img/authors/1.jpg"></div>
							<p><span>Giáo viên</span>:<%=item.KH_GIAOVIEN %>,</p>
						</div>
					</div>
				</div>
			</div>
			<%})%>
		</div>
	</div>
</section>
<!-- course section end -->